@using Shared.Entities
@{
    ViewBag.Title = "Online .Net Quiz";
    ViewBag.MetaDescription = "Details about our C#, ASP.Net MVC, JavaScript and SharePoint tests";
    ViewBag.MetaKeywords = "c#, c# quiz, c# test, c# quiz online, c# test online, mvc, mvc quiz, mvc test, mvc quiz online, mvc test online, javascript, javascript quiz, javascript test, javascript quiz online, javascript test online, sharepoint, sharepoint 2016, sharepoint 2016 quiz, sharepoint 2016 test";
}

<link href="~/Content/quizCategory.css" rel="stylesheet">

@Html.Partial("_Menu")
<div class="detail-form-container">
    <div class="detail-title">
        <img src="~/Images/weSupport.png" alt="We support the following quiz categories"/>
        <hr class="hr-green"/>
    </div>
    <div class="detail-item">
        <img src="~/Images/tick.png"/>
        @Html.ActionLink("C# Quiz", "CategoryDetails", new {category = QuestionCategory.CSharp})
        <hr/>
    </div>
    <div class="detail-item">
        <img src="~/Images/tick.png"/>
        @Html.ActionLink("ASP.Net MVC Quiz", "CategoryDetails", new {category = QuestionCategory.Mvc})
        <hr/>
    </div>
    <div class="detail-item">
        <img src="~/Images/tick.png"/>
        @Html.ActionLink("JavaScript Quiz", "CategoryDetails", new {category = QuestionCategory.Javascript})
        <hr/>
    </div>
    <div class="detail-item">
        <img src="~/Images/tick.png"/>
        @Html.ActionLink("SharePoint 2016 Quiz", "CategoryDetails", new {category = QuestionCategory.SharePoint})
        <hr class="hr-green"/>
    </div>
    <div class="detail-buttons">
        <a href="@Url.Action("About", "Home", null)" class="button"> Back </a>
    </div>
</div>