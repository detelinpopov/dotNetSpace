@model WebProject.Models.Quiz.QuestionModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Question", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    <span> Question: </span>
    <div>
        @Html.TextAreaFor(m => m.Text, new { style ="width:1000px"})
    </div>

    <div style="padding-top: 10px; padding-bottom: 10px;">
        <span> Image: </span>
        <input type="file" name="uploadImage"/>
    </div>
    <div style="padding-top: 10px; padding-bottom: 10px;">
        <span> Category: </span>
        @Html.DropDownListFor(m => m.SelectedQuestionCategory, Model.QuestionCategories, new {style = "width: 100%"})      
    </div>
    <div style="padding-top: 10px; padding-bottom: 10px;">
        <span> Answer 1: </span>
        @Html.TextAreaFor(m => m.Answers[0].Text, new {style = "width: 100%"})
        <span> Is Correct: </span>
        @Html.CheckBoxFor(m => m.Answers[0].IsCorrect)
    </div>
    <div style="padding-top: 10px; padding-bottom: 10px;">
        <span> Answer 2: </span>
        @Html.TextAreaFor(m => m.Answers[1].Text, new { style = "width: 100%" })
        <span> Is Correct: </span>
        @Html.CheckBoxFor(m => m.Answers[1].IsCorrect)
    </div>
    <div style="padding-top: 10px; padding-bottom: 10px;">
        <span> Answer 3: </span>
        @Html.TextAreaFor(m => m.Answers[2].Text, new { style = "width: 100%" })
        <span> Is Correct: </span>
        @Html.CheckBoxFor(m => m.Answers[2].IsCorrect)
    </div>
    <div style="padding-top: 10px; padding-bottom: 10px;">
        <span> Answer 4: </span>
        @Html.TextAreaFor(m => m.Answers[3].Text, new { style = "width: 100%" })
        <span> Is Correct: </span>
        @Html.CheckBoxFor(m => m.Answers[3].IsCorrect)
    </div>
    <div style="padding-top: 10px; padding-bottom: 10px;">
        <input type="submit" value="Save"/>
    </div>
}